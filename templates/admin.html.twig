<!DOCTYPE html>
<html lang="fr">
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <title>{% block title %}Eshop - Accueil{% endblock %}</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

            {% block stylesheets %}
                <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
                <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400|Roboto:300,400,700">
                <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400|Roboto:300,400,700">
                <link rel="stylesheet" href="/assets/fonts/fontawesome-all.min.css">
                <link rel="stylesheet" href="/assets/css/Navigation-Clean.css">
                <link rel="stylesheet" href="/assets/css/styles.css">
            {% endblock %}
        {% endblock %}
    </head>
        <body>{% block body %}

            {% if is_granted('ROLE_ADMIN') %}
                {# Navigation - BEGIN #}
                <nav class="navbar navbar-light navbar-expand-md navigation-clean" style="background-color: #e14b4b;">
                    <div class="container"><a class="navbar-brand" href="{{ path('homepage') }}"><img src="/assets/img/site/logo_flat.png" style="width: 100px;"></a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navcol-1">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item"><a class="nav-link" href="{{ path('admin_panel') }}">Admin</a></li>
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('cart') }}"><i class="fas fa-shopping-bag" style="font-size: 22px;"></i></a></li>
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('account') }}"><i class="fa fa-user" style="font-size: 22px;"></i></a></li>
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-power-off" style="font-size: 22px;"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                {# Navigation - END #}
            {% elseif is_granted('ROLE_USER') %}
                {# Navigation - BEGIN #}
                <nav class="navbar navbar-light navbar-expand-md navigation-clean" style="background-color: #e14b4b;">
                    <div class="container"><a class="navbar-brand" href="{{ path('homepage') }}"><img src="/assets/img/site/logo_flat.png" style="width: 100px;"></a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navcol-1">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('cart') }}"><i class="fas fa-shopping-bag" style="font-size: 22px;"></i></a></li>
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('account') }}"><i class="fa fa-user" style="font-size: 22px;"></i></a></li>
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-power-off" style="font-size: 22px;"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                {# Navigation - END #}
            {% else %}
                {# Navigation - BEGIN #}
                <nav class="navbar navbar-light navbar-expand-md navigation-clean" style="background-color: #e14b4b;">
                    <div class="container"><a class="navbar-brand" href="{{ path('homepage') }}"><img src="/assets/img/site/logo_flat.png" style="width: 100px;"></a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navcol-1">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('cart') }}"><i class="fas fa-shopping-bag" style="font-size: 22px;"></i></a></li>
                                <li class="nav-item text-center" style="text-align: center;height: 47px;"><a class="nav-link" href="{{ path('app_login') }}"><i class="fas fa-user-plus" style="font-size: 22px;"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                {# Navigation - END #}
            {% endif %}

            {# Body - BEGIN #}

            <div class="text-left">
                <div class="container" style="margin-top: 100px;border-width: 1px;border-style: dashed;">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="text-center" style="margin-top: 10px;margin-bottom: 10px;">Administration - DRESS UP.CO</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6" style="border-top-width: 1px;border-top-style: dashed;border-right-width: 1px;border-right-style: dashed;border-bottom-width: 1px;border-bottom-style: dashed;">
                            <h4 style="margin-top: 10px;">Produits</h4>
                        </div>
                        <div class="col-md-6" style="border-top-width: 1px;border-top-style: dashed;border-right-width: 1px;border-right-style: none;border-bottom-width: 1px;border-bottom-style: dashed;">
                            <h4 style="margin-top: 10px;">Utilisateurs</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6" style="border-right-width: 1px;border-right-style: dashed;"><a class="btn btn-primary" href="{{ path('productsview') }}" role="button" style="margin-top: 10px;margin-bottom: 10px;background: #e14b4b;border-width: 0px;">Consulter</a></div>
                        <div class="col-md-6"><a class="btn btn-primary" href="{{ path('usersview') }}" role="button" style="margin-top: 10px;margin-bottom: 10px;background: #e14b4b;border-width: 0px;">Consulter</a></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6" style="border-right-width: 1px;border-right-style: dashed;"><a class="btn btn-primary" href="{{ path('add_product') }}" role="button" style="margin-top: 10px;margin-bottom: 10px;border-width: 0px;background: #e14b4b;">Ajouter</a></div>
                        <div class="col-md-6"><a class="btn btn-primary" href="{{ path('app_register') }}" role="button" style="margin-top: 10px;margin-bottom: 10px;background: #e14b4b;border-width: 0px;">Ajouter</a></div>
                    </div>
                </div>
            </div>


        {% endblock %}</body>
        {% block javascripts %}
            <script src="/assets/js/jquery.min.js"></script>
            <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
        {% endblock %}
</html>
